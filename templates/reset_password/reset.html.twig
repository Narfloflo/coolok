{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/user/form.css') }}">
{% endblock %}

{% block body %}
    <h1 class="h3 my-3 font-weight-normal">Réinitialiser votre mot de passe</h1>
    <div class="form">
        <div class="form-box">
            {{ form_start(resetForm) }}
            <div class="form-row">
                {{ form_row(resetForm.plainPassword) }}
            </div>
            <div class="outform">
                <button class="btn-validate">Réinitaliser</button>
            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
