{% extends 'base.html.twig' %}

{% block title %}{{ user.firstname }} {{ user.lastname|u.truncate(1) }}. {{ userAge }}ans sur {{ parent() }}.fr{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/user/user.css') }}">
{% endblock %}

{% block body %}
    <div class="img">
        <img class="photo" src="{{ user.picture }}" alt="Photo {{ user.firstname }}">
    </div>
    <div class="me subtitle">
        <p><strong>{{ user.firstname }} {{ user.lastname|u.truncate(1) }}.</strong> - {{ userAge }} ans</p>
        <span>
            {% if app.user %}
            <a href="{{ path('user_favorite', { id:user.id })}} ">
                {% if isFav %}
                <i class="fas fa-heart"></i>
                {% else %}
                <i class="far fa-heart"></i>
                {% endif %}
            {% else %}
            <a href="{{ path('user_login') }} ">
                <i class="far fa-heart"></i>
            {% endif %}
            </a>
        </span>
    </div>
    <div class="search">
        <!-- <p>Cherche un(e) coolokataire</p> -->
    </div>
    <div class="me">
        <ion-icon name="location-outline"></ion-icon>
        <p>{{ user.city }}</p>
    </div>
    <div class="description">
        <p>{{ user.description }}</p>
    </div>

    <h2>Passions</h2>
        <div>
            <p>{{ user.passions }}</p>
        </div>

        <div class="d-flex justify-content-center">
            <p class="btn btn-outline-danger border border-dark rounded-pill p-2">
                <ion-icon name="chatbox-ellipses-outline"></ion-icon>
                Contacter {{ user.firstname }}
                <ion-icon name="chevron-forward-outline"></ion-icon>
            </p>
        </div>

{% endblock %}