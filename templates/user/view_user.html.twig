{% extends 'base.html.twig' %}

{% block title %}Voir profil - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/user/user.css') }}">
{% endblock %}

{% block body %}
    <div class="img">
        <img class="photo" src="{{ user.picture }}" alt="Photo {{ user.firstname }}">
    </div>
    <div class="me">
        <p><strong>{{ user.firstname }} {{ user.lastname }}</strong> - {{ userAge }} ans</p>
    </div>
    <div class="search">
        <!-- <p>Cherche un(e) coolokataire</p> -->
    </div>
    <div class="me">
        <ion-icon name="location-outline"></ion-icon>
        <p>{{ user.city }}</p>
    </div>
    <div class="description">
        <p>{{ user.description }}</p>
    </div>

    <h2>Passions</h2>
        <div>
            <p>{{ user.passions }}</p>
        </div>

        <div class="d-flex justify-content-center">
            <p class="btn btn-outline-danger border border-dark rounded-pill p-2">
                <ion-icon name="chatbox-ellipses-outline"></ion-icon>
                Contacter {{ user.firstname }}
                <ion-icon name="chevron-forward-outline"></ion-icon>
            </p>
        </div>

{% endblock %}