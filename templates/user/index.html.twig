{% extends 'base.html.twig' %}
{% block title %}Mon Compte - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/user/profil.css') }}">
{% endblock %}

{% block body %}
<h1>Mon profil</h1>
    <div class="img">
        <img class="photo" src="/uploads/images/{{ user.picture }}" alt="Photo {{ user.firstname }}">
    </div>
    <div class="me">
        <p><strong>{{ user.firstname }} {{ user.lastname }}</strong> - 32 ans</p>
    </div>
    <div class="me">
        <ion-icon name="location-outline"></ion-icon>
        <p>{{ user.city }}</p>
    </div>
    <hr>
<h2>À propos de moi</h2>
    <div>
        <p>{{ user.description }}</p>
    </div>
<h2>Passions</h2>
    <div>
        <p>{{ user.passions }}</p>
    </div>
<h2>Date de naissance</h2>
    <div>
        <p>{{ user.birthday|date("m/d/Y") }}</p>
    </div>
    <hr>

<section class="langue">
    <h2>Je parle</h2>
        <article>
            <img src="#" alt="Drapeau FR">
            <h3>Français</h3>
        </article>
        <article>
            <img src="#" alt="Drapeau GR">
            <h3>Allemand</h3>
        </article>
        <article>
            <img src="#" alt="Drapeau RU">
            <h3>Russe</h3>
        </article>
</section>
    <div class="perso">
        <h2>Mon logement</h2>
        <a href="#"><ion-icon name="chevron-forward-outline"></ion-icon></a>
    </div>
    <h3>Pas encore de Logement ?</h3>
    <a href="{{ path('user_AddFlat') }}"><button type="button" class="btn btn-success">Ajoute un logement ici</button></a>
    <div class="perso">
        <h2>Mes préférences</h2>
            <a href="#"><ion-icon name="chevron-forward-outline"></ion-icon></a>
    </div>
    <div class="desac">
        <button type="button" class="btn btn-outline-secondary">Désactiver le compte</button>
    </div>
    <div class="delete">
        <a class="supp" href="#">Supprimer le compte</a>
    </div>

{% endblock %}