                    </article>
                    <article>
                        <img src="#" alt="Drapeau RU">
                        <h3>Russe</h3>
                    </article>
            </section> #}
                <div class="perso">
                    <h2>Mon logement</h2>
                    <a href="#"><ion-icon name="chevron-forward-outline"></ion-icon></a>
                </div>
                <h3>Pas encore de Logement ?</h3>
                <a href="{{ path('user_AddFlat') }}"><button type="button" class="btn btn-success">Ajoute un logement ici</button></a>
                {# <div class="perso">
                    <h2>Mes préférences</h2>
                        <a href="#"><ion-icon name="chevron-forward-outline"></ion-icon></a>
                </div> #}
                <div class="desac">
                    {% if user.available == true %}
                    <a href="{{ path('user_desactivation') }}"><button type="button" class="btn btn-outline-warning coloor">Désactiver le compte</button></a>
                    {% else %}
                    <a href="{{ path('user_activation') }}"><button type="button" class="btn btn-outline-secondary coloor">Activer le compte</button></a>
                    {% endif %}
                </div>
                <div class="delete">
                    <a class="supp" href="{{ path('user_delete') }} ">Supprimer le compte</a>
                </div>
            </div>
        </div> 

    </div>
</div>
    

{% endblock %}